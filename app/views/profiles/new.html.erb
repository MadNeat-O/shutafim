<div class="container">
  <div class="row">
    <div class="col-8 m-auto p-3">
      <h2>Create your profile!</h2>

      <%= simple_form_for(@profile) do |f| %>
        <div class="form-inputs">
          <%= f.input :gender,
                      collection: ['male', 'female', 'other'],
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "profession" } %>
          <%= f.input :profession,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "profession" } %>
          <%= f.input :about_me,
                      as: :text,
                      required: false,
                      input_html: { autocomplete: "about-me" } %>
          <%= f.input :photo, as: :file %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
